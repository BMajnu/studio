{
  "manifest_version": 3,
  "name": "DesAInR Assistant",
  "description": "Monica-like AI assistant by DesAInR",
  "version": "0.1.1",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "clipboardWrite"
  ],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js", "type": "module" },
  "action": { "default_title": "DesAInR", "default_popup": "popup.html" },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "toggle-overlay": {
      "suggested_key": { "default": "Ctrl+M", "mac": "Command+M" },
      "description": "Toggle DesAInR overlay"
    }
  }
}
