{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": ["node", "react", "react-dom"]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/app/**/*",
    "src/components/**/*",
    "src/ai/**/*",
    "src/lib/**/*",
    "src/hooks/**/*",
    "src/contexts/**/*",
    "src/types/**/*",
    "src/utils/**/*",
    "src/config.ts",
    "src/firebaseClient.ts",
    "src/auth.ts"
  ],
  "exclude": [
    "node_modules",
    "extension/**/*",
    "extension-backup*/*",
    "extension-backup*/**/*",
    "extension-backup-*/**/*",
    "src/contentScript.ts",
    "src/background.ts",
    "src/pageTranslate.ts",
    "src/parallel.ts",
    "src/domReplace.ts",
    "src/apiClient.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
